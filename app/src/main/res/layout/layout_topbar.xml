<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_hight"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_leftBtn"
            android:layout_width="@dimen/title_left_img_width"
            android:layout_height="match_parent"
            android:padding="@dimen/title_left_right_padding"
            android:src="@drawable/icon_leftarrow"
            android:background="@drawable/titlebar_click_style"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tvback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:textSize="@dimen/title_left_text_size"
            android:textColor="@color/white"
            android:visibility="gone"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/title_text"
        android:textColor="@color/white"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:background="@drawable/titlebar_click_style"
        android:orientation="horizontal">
        <ImageView
            android:background="@drawable/titlebar_click_style"
            android:id="@+id/img_rightBtn"
            android:layout_width="@dimen/title_left_img_width"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/title_left_right_padding"
            android:paddingRight="@dimen/title_left_right_padding"
            android:src="@drawable/icon_leftarrow"
            android:visibility="gone"/>
        <TextView
            android:background="@drawable/titlebar_click_style"
            android:id="@+id/tvMore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/title_left_text_size"
            android:gravity="center"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:textColor="@color/white"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>